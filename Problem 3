def triangle_pattern(n)
    for x in range (1,n+1):
        for y in range (n,x,-1):
            print ("",end="")
        for a in range (1,x):
            print (chr(64+a),end="")
        for b in range (x,0,-1):
            print (chr(64+b),end="")
        print ()
input_value=int(input ("enter a value"))
triangle_pattern(input_value)
